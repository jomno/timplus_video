  <section class="contents class">
    <div class="curriculum_name">
        <span class="class_color" data-color="#58c9b9" style="background: rgb(88, 201, 185);"></span>
        <%= @title %>
        <!--<div class="btn right swal">커리큘럼 만들기</div>-->
        <%=link_to('커리큘럼 만들기',new_curriculum_path(home_id: @category.id),class: "btn2 right",style: "margin-top: 0px;") unless action_name=="index"%>
