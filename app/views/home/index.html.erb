    </div>
    <ul class="sorting_btn">
        <li><a href="#" class="on"><p>전체</p><p class="count0">5</p></a></li>
        <li><a href="#"><p>무료</p><p class="count1">0</p></a></li>
        <li><a href="#"><p>유료</p><p class="count2">1</p></a></li>
        <li><a href="#" ><p>나의 강의</p><p class="count3">4</p></a></li>
        <li><a href="#"><p>수강 강의</p><p class="count4">0</p></a></li>
    </ul>
    <div class="contents_box">
      <!--<div class="class_mission">-->
        <% @curriculums.each do |curriculum| %>
           <div class="box class_misson" id="mission_2284" style="display: inline-block;"><!--class_misson (수업목록)-->
            <a class="content" href="<%=curriculum_path(curriculum.category.id,curriculum.id)%>">
                <table class="misson_info">
                   <tbody>
                        <tr>
                            <th class="misson_type">
                                <span class="misson_type_name type2" style="padding-left:6px;padding-right:6px; width:auto;">무료<%#= curriculum.user.email %></span>
                                <span>|</span>
                                <span><%= curriculum.title %><%#= curriculum.created_at.strftime('%-d %B %Y %H:%M:%S') %></span>
                            </th>
                        </tr>
                        <tr class="misson_title">
                           <td>
                               <p><%= curriculum.description %></p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </a>
        </div>
        <% end %>
       
      <!--</div>-->
    </div>
  </section>


